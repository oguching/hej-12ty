---
title: Archives
layout: layouts/page.njk
---

{%- for post in collections.posts | reverse -%}
	<div class="split post-lists">
		<div class="post-list">
		  <a href="{{post.url}}">{{ post.data.title }}</a>
		</div>

		<div>
		  <time>{{ post.date.toLocaleDateString('en-US', {
		            month: 'short',
		            day: 'numeric'
		        }) }}
		  </time>
		</div>
	</div>
{% endfor %} 
